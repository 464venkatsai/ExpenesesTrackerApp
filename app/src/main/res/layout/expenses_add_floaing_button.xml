<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/charcoal">

    <EditText
        android:id="@+id/newCustomName"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round_shape_background"
        android:backgroundTint="@null"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:foregroundGravity="center_vertical"
        android:hint="Title"
        android:inputType="text"
        android:paddingLeft="25dp"
        android:shadowColor="@color/subBackGround"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/subBackGround"
        android:textColorHint="@color/white"
        android:textColorLink="@color/subBackGround"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round_shape_background"
        android:backgroundTint="@null"
        android:ems="10"
        android:foregroundGravity="center_vertical"
        android:hint="Amount"
        android:inputType="text"
        android:paddingLeft="25dp"
        android:shadowColor="@color/subBackGround"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/subBackGround"
        android:textColorHint="@color/white"
        android:textColorLink="@color/subBackGround"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newCustomName" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round_shape_background"
        android:backgroundTint="@null"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/subBackGround"
            android:backgroundTint="@color/subBackGround"
            android:foregroundGravity="center_vertical"
            android:hint="Tag"
            android:paddingLeft="25dp"
            android:shadowColor="@color/subBackGround"
            android:textColor="@android:color/white"
            android:textColorHighlight="@color/subBackGround"
            android:textColorHint="@color/white"
            android:textColorLink="@color/subBackGround"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round_shape_background"
        android:backgroundTint="@null"
        android:ems="10"
        android:foregroundGravity="center_vertical"
        android:hint="Date"
        android:inputType="text"
        android:paddingLeft="25dp"
        android:shadowColor="@color/subBackGround"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/subBackGround"
        android:textColorHint="@color/white"
        android:textColorLink="@color/subBackGround"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round_shape_background"
        android:backgroundTint="@null"
        android:ems="10"
        android:foregroundGravity="center_vertical"
        android:hint="Note"
        android:inputType="text"
        android:paddingLeft="25dp"
        android:shadowColor="@color/subBackGround"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/subBackGround"
        android:textColorHint="@color/white"
        android:textColorLink="@color/subBackGround"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

</androidx.constraintlayout.widget.ConstraintLayout>