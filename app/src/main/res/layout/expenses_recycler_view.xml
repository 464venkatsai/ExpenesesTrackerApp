<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:backgroundTint="#3B2525">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/subBackGround"
        android:backgroundTint="@color/subBackGround"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/expenseImageType"
            android:layout_width="63dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/folder" />

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:gravity="center|clip_vertical|fill_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expenseCustomName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingTop="7dp"
                android:text="Cashback Offer"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/expenseTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="enterainment"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expenseAmount"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="start|center_vertical"
                android:text="+6.30"
                android:textColor="#28BD78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expenseDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="start|center_vertical"
                android:text="oct 30,2024"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>